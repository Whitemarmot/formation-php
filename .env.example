# Formation PDF - Configuration Environnement

# Application
APP_NAME="Formations Soudeuses à Points"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Base de données
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=formation_db
DB_USERNAME=formation_user
DB_PASSWORD=formation_password
DB_ROOT_PASSWORD=rootpassword

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Cache & Sessions
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
QUEUE_CONNECTION=redis

# Mail (Mailpit en dev)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="contact@formation-soudure.com"
MAIL_FROM_NAME="${APP_NAME}"

# Stripe
STRIPE_KEY=pk_test_xxxxx
STRIPE_SECRET=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# PayPal
PAYPAL_CLIENT_ID=xxxxx
PAYPAL_CLIENT_SECRET=xxxxx
PAYPAL_MODE=sandbox

# PDF Generation
PDF_STORAGE_PATH=formations
PDF_WATERMARK_ENABLED=true
PDF_DOWNLOAD_EXPIRY_DAYS=7

# LaTeX
LATEX_CONTAINER=formation_latex
LATEX_WORKSPACE=/var/www/latex

# Admin
ADMIN_EMAIL=admin@formation-soudure.com
ADMIN_PASSWORD=changeme

# Filesystem
FILESYSTEM_DISK=local

# AWS (optionnel pour production)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=eu-west-3
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false
